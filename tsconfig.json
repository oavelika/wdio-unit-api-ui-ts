{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "types": [
            "node",
            "@wdio/globals/types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@pages": [
                "po/pages"
            ],
            "@components": [
                "po/components"
            ]
        }
    },
    "include": [
        "./src/*",
        "./"
    ],
    "exclude": [
        "node_modules"
    ]
}